<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AutoClicker" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_cyan</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Ripple -->
        <item name="android:colorControlHighlight">@color/glow_purple</item>
        
        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>
    
    <!-- Dialog Theme -->
    <style name="Theme.AutoClicker.Dialog" parent="Theme.Material3.Dark.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="dialogCornerRadius">24dp</item>
    </style>
    
    <!-- Bottom Sheet Theme -->
    <style name="Theme.AutoClicker.BottomSheet" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.AutoClicker.BottomSheet</item>
    </style>
    
    <style name="Widget.AutoClicker.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/background_card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.AutoClicker.LargeComponent</item>
    </style>
    
    <style name="ShapeAppearance.AutoClicker.LargeComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>
    
    <!-- Light Theme -->
    <style name="Theme.AutoClicker.Light" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_cyan</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Ripple -->
        <item name="android:colorControlHighlight">@color/glow_purple</item>
        
        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
    </style>
    
    <!-- Light Dialog Theme -->
    <style name="Theme.AutoClicker.Dialog.Light" parent="Theme.Material3.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/card_light</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="dialogCornerRadius">24dp</item>
    </style>
</resources>
