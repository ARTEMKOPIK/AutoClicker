<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:padding="24dp">

    <!-- Иконка обновления с анимацией -->
    <View
        android:id="@+id/updateIconBg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_update_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivUpdateIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_update"
        android:contentDescription="Update"
        app:tint="@color/text_on_primary"
        app:layout_constraintTop_toTopOf="@id/updateIconBg"
        app:layout_constraintBottom_toBottomOf="@id/updateIconBg"
        app:layout_constraintStart_toStartOf="@id/updateIconBg"
        app:layout_constraintEnd_toEndOf="@id/updateIconBg" />

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Доступно обновление!"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/updateIconBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Версия -->
    <LinearLayout
        android:id="@+id/versionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvCurrentVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0.0"
            android:textColor="@color/text_tertiary"
            android:textSize="14sp"
            android:background="@drawable/bg_version_chip"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="8dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/tvNewVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0.1"
            android:textColor="@color/text_on_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_version_chip_new"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

    <!-- Размер файла -->
    <TextView
        android:id="@+id/tvFileSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Размер: 5.2 MB"
        android:textColor="@color/text_tertiary"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/versionContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Разделитель -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/tvFileSize" />

    <!-- Заголовок изменений -->
    <TextView
        android:id="@+id/tvChangelogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Что нового"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Список изменений -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChangelog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:maxHeight="200dp"
        android:nestedScrollingEnabled="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/tvChangelogTitle"
        app:layout_constraintHeight_max="200dp"
        tools:listitem="@layout/item_changelog" />

    <!-- Прогресс загрузки (скрыт по умолчанию) -->
    <LinearLayout
        android:id="@+id/downloadProgressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/rvChangelog">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDownloadStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Загрузка..."
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDownloadPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.Material3.LinearProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/tvDownloadSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="0 MB / 5.2 MB"
            android:textColor="@color/text_tertiary"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Кнопки -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/downloadProgressContainer"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Кнопка обновить -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Обновить"
            android:textColor="@color/text_on_primary"
            android:textSize="16sp"
            android:textAllCaps="false"
            app:backgroundTint="@color/primary"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_download"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/text_on_primary" />

        <!-- Кнопка позже -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLater"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="Напомнить позже"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textAllCaps="false" />

        <!-- Кнопка пропустить -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkip"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Пропустить эту версию"
            android:textColor="@color/text_tertiary"
            android:textSize="12sp"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
