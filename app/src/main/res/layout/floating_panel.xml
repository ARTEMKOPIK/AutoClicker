<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_floating_panel"
    android:padding="12dp">

    <!-- Script Name Header -->
    <TextView
        android:id="@+id/tvScriptName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Скрипт не выбран"
        android:textColor="@color/text_tertiary"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- Control Panel -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Select Script -->
        <ImageButton
            android:id="@+id/btnSelectScript"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_icon_button"
            android:src="@drawable/ic_scripts"
            android:scaleType="centerInside"
            android:padding="10dp"
            app:tint="@color/text_secondary"
            android:contentDescription="Select script" />

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_play_button"
            android:src="@drawable/ic_play"
            android:scaleType="centerInside"
            android:padding="14dp"
            app:tint="@color/text_on_primary"
            android:contentDescription="Play/Pause" />

        <!-- Logs Button -->
        <ImageButton
            android:id="@+id/btnLogs"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_icon_button"
            android:src="@drawable/ic_logs"
            android:scaleType="centerInside"
            android:padding="10dp"
            app:tint="@color/text_secondary"
            android:contentDescription="Logs" />

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_icon_button"
            android:src="@drawable/ic_close"
            android:scaleType="centerInside"
            android:padding="10dp"
            app:tint="@color/error"
            android:contentDescription="Close" />
    </LinearLayout>

    <!-- Scripts List Container -->
    <LinearLayout
        android:id="@+id/scriptsContainer"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@drawable/bg_card_glass"
        android:padding="8dp"
        android:visibility="gone" />

    <!-- Logs Container -->
    <LinearLayout
        android:id="@+id/logsContainer"
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:background="@drawable/bg_card_glass"
        android:visibility="gone">

        <!-- Logs Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_orange" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Логи"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

            <ImageButton
                android:id="@+id/btnClearLogs"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_icon_button"
                android:src="@drawable/ic_clear"
                android:scaleType="centerInside"
                android:padding="4dp"
                app:tint="@color/text_tertiary"
                android:contentDescription="Clear logs" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <ScrollView
            android:id="@+id/logsScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:text="Ожидание запуска..." />
        </ScrollView>
    </LinearLayout>

</LinearLayout>
