<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/background_surface">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/bg_icon_button"
            app:tint="@color/text_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Настройки"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Permissions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="РАЗРЕШЕНИЯ"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <!-- Accessibility -->
            <LinearLayout
                android:id="@+id/itemAccessibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_glass_ripple"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_settings"
                    android:background="@drawable/bg_icon_button"
                    app:tint="@color/accent_cyan" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accessibility Service"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Для кликов по экрану"
                        android:textColor="@color/text_tertiary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvAccessibilityStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="Выкл"
                    android:textColor="@color/error"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_chip"
                    android:gravity="center"
                    android:paddingHorizontal="12dp" />
            </LinearLayout>

            <!-- Overlay -->
            <LinearLayout
                android:id="@+id/itemOverlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_glass_ripple"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_play"
                    android:background="@drawable/bg_icon_button"
                    app:tint="@color/accent_pink" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Наложение поверх окон"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Для плавающей панели"
                        android:textColor="@color/text_tertiary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvOverlayStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="Выкл"
                    android:textColor="@color/error"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_chip"
                    android:gravity="center"
                    android:paddingHorizontal="12dp" />
            </LinearLayout>

            <!-- Screen Capture -->
            <LinearLayout
                android:id="@+id/itemCapture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_glass_ripple"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_screenshot"
                    android:background="@drawable/bg_icon_button"
                    app:tint="@color/accent_orange" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Захват экрана"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Для скриншотов и OCR"
                        android:textColor="@color/text_tertiary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCaptureStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="Выкл"
                    android:textColor="@color/error"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_chip"
                    android:gravity="center"
                    android:paddingHorizontal="12dp" />
            </LinearLayout>

            <!-- Data Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ДАННЫЕ"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <!-- Variables -->
            <LinearLayout
                android:id="@+id/itemVariables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_glass_ripple"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_edit"
                    android:background="@drawable/bg_icon_button"
                    app:tint="@color/accent_green" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Глобальные переменные"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Переменные между скриптами"
                        android:textColor="@color/text_tertiary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    android:rotation="180"
                    app:tint="@color/text_tertiary" />
            </LinearLayout>

            <!-- Logs -->
            <LinearLayout
                android:id="@+id/itemLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_glass_ripple"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_logs"
                    android:background="@drawable/bg_icon_button"
                    app:tint="@color/info" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Логи скриптов"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="История выполнения"
                        android:textColor="@color/text_tertiary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    android:rotation="180"
                    app:tint="@color/text_tertiary" />
            </LinearLayout>

            <!-- Quick Actions -->
            <LinearLayout
                android:id="@+id/itemQuickActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_glass_ripple"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_play"
                    android:background="@drawable/bg_icon_button"
                    app:tint="@color/primary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Быстрые действия"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Сохранённые координаты"
                        android:textColor="@color/text_tertiary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    android:rotation="180"
                    app:tint="@color/text_tertiary" />
            </LinearLayout>

            <!-- Appearance Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ОФОРМЛЕНИЕ"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <!-- Theme Selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_glass_ripple"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_settings"
                    android:background="@drawable/bg_icon_button"
                    app:tint="@color/accent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Тема"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Светлая, тёмная или системная"
                        android:textColor="@color/text_tertiary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinnerTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_chip"
                    android:paddingHorizontal="12dp"
                    android:minWidth="110dp" />
            </LinearLayout>

            <!-- Updates Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ОБНОВЛЕНИЯ"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <!-- Check Updates -->
            <LinearLayout
                android:id="@+id/itemCheckUpdates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_glass_ripple"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_update"
                    android:background="@drawable/bg_icon_button"
                    app:tint="@color/accent_cyan" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Проверить обновления"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCurrentVersionInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Текущая версия: 1.0"
                        android:textColor="@color/text_tertiary"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressCheckUpdate"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="gone"
                    android:indeterminate="true" />

                <ImageView
                    android:id="@+id/ivCheckUpdateArrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    android:rotation="180"
                    app:tint="@color/text_tertiary" />
            </LinearLayout>

            <!-- App Info -->
            <TextView
                android:id="@+id/tvAppVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AutoClicker v1.0\nСделано с ❤️"
                android:textColor="@color/text_tertiary"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="32dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
