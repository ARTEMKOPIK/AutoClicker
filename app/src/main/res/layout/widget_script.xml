<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp"
    android:gravity="center">

    <!-- Header: Script selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnWidgetPrev"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:scaleType="centerInside"
            android:padding="4dp"
            android:alpha="0.7"
            android:contentDescription="Previous" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="4dp">

            <TextView
                android:id="@+id/tvWidgetScriptName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AutoClicker"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvWidgetCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/5"
                android:textColor="#888888"
                android:textSize="10sp"
                android:gravity="center" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnWidgetNext"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:rotation="180"
            android:scaleType="centerInside"
            android:padding="4dp"
            android:alpha="0.7"
            android:contentDescription="Next" />
    </LinearLayout>

    <!-- Status -->
    <TextView
        android:id="@+id/tvWidgetStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="⏸ Остановлен"
        android:textColor="#6B7280"
        android:textSize="11sp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/btnWidgetStart"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/widget_button_play"
            android:src="@drawable/ic_play"
            android:scaleType="centerInside"
            android:padding="14dp"
            android:contentDescription="Start" />

        <ImageButton
            android:id="@+id/btnWidgetStop"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/widget_button_stop"
            android:src="@drawable/ic_stop"
            android:scaleType="centerInside"
            android:padding="10dp"
            android:contentDescription="Stop" />
    </LinearLayout>

</LinearLayout>
