<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/background_surface">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/bg_icon_button"
            app:tint="@color/text_primary" />

        <TextView
            android:id="@+id/tvScriptName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Untitled Script"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/btnRename"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_edit"
            android:background="@drawable/bg_icon_button"
            app:tint="@color/text_secondary"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Blocks List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBlocks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layoutEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ§©"
            android:textSize="64sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visual_editor_empty_title"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visual_editor_empty_hint"
            android:textColor="@color/text_tertiary"
            android:textSize="14sp"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- Bottom Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/background_surface"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnAddBlock"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/visual_editor_add_block"
            android:textColor="@color/text_on_primary"
            android:background="@drawable/bg_button_gradient"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnGenerate"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_code"
            android:background="@drawable/bg_button_secondary"
            app:tint="@color/text_primary"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_save"
            android:background="@drawable/bg_button_secondary"
            app:tint="@color/success" />
    </LinearLayout>

</LinearLayout>

