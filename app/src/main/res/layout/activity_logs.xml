<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:background="@color/background_surface">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            android:background="@drawable/bg_icon_button"
            app:tint="@color/text_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Логи"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />

        <ImageView
            android:id="@+id/btnClear"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_delete"
            android:background="@drawable/bg_icon_button"
            app:tint="@color/error" />

        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_share"
            android:background="@drawable/bg_icon_button"
            android:layout_marginStart="4dp"
            app:tint="@color/text_secondary" />
    </LinearLayout>

    <!-- Filter Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingVertical="12dp"
        android:background="@color/background_surface">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Все"
                android:textColor="@color/text_on_primary"
                android:textSize="13sp"
                android:background="@drawable/bg_chip"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:selected="true" />

            <TextView
                android:id="@+id/chipInfo"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Info"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:background="@drawable/bg_chip"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/chipWarning"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Warning"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:background="@drawable/bg_chip"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/chipError"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Error"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:background="@drawable/bg_chip"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Logs List -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:clipToPadding="false" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_logs"
                android:alpha="0.3"
                app:tint="@color/text_secondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Логи пусты"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
