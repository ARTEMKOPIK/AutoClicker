<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_surface">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/visual_editor_select_block"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Categories Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="16dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_all"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipActions"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_actions" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipWait"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_wait" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipConditions"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_conditions" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipLoops"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_loops" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipVariables"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_variables" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipOutput"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_output" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipOcr"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_ocr" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSystem"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_system" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Blocks List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBlockPalette"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

</LinearLayout>

