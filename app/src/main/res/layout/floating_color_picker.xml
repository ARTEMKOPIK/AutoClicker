<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_floating_panel"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_colorpicker"
            app:tint="@color/accent_pink" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Пипетка"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_icon_button"
            android:src="@drawable/ic_close"
            android:scaleType="centerInside"
            android:padding="6dp"
            app:tint="@color/error" />
    </LinearLayout>

    <!-- Color Preview -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card_glass"
        android:padding="12dp">

        <View
            android:id="@+id/colorPreview"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_card_gradient" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvColorHex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#8B5CF6"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvColorRgb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RGB: 139, 92, 246"
                android:textColor="@color/text_tertiary"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnCopy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_icon_button"
            android:src="@drawable/ic_edit"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="@color/text_secondary" />
    </LinearLayout>

    <!-- Coordinates -->
    <TextView
        android:id="@+id/tvCoordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X: 0, Y: 0"
        android:textColor="@color/text_tertiary"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginTop="12dp" />

    <!-- Hint -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зажми и води по экрану"
        android:textColor="@color/text_tertiary"
        android:textSize="11sp"
        android:gravity="center"
        android:layout_marginTop="4dp" />

</LinearLayout>
