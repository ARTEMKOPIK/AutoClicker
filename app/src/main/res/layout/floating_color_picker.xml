<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_floating_panel"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_colorpicker"
            app:tint="@color/accent_pink" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Пипетка"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp" />

        <ImageButton
            android:id="@+id/btnClosePicker"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_icon_button"
            android:src="@drawable/ic_close"
            android:scaleType="centerInside"
            android:padding="6dp"
            app:tint="@color/error" />
    </LinearLayout>

    <!-- Color Preview -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_card_glass"
        android:padding="12dp">

        <View
            android:id="@+id/colorPreviewLarge"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_card_gradient" />

        <View
            android:id="@+id/colorDot"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_orange"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvHexColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#000000"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvRgbColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RGB: 0, 0, 0"
                android:textColor="@color/text_tertiary"
                android:textSize="11sp"
                android:fontFamily="monospace"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvIntColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INT: 0"
                android:textColor="@color/text_tertiary"
                android:textSize="11sp"
                android:fontFamily="monospace" />
        </LinearLayout>
    </LinearLayout>

    <!-- Coordinates -->
    <TextView
        android:id="@+id/tvCoordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X: 0, Y: 0"
        android:textColor="@color/text_tertiary"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:layout_marginTop="12dp" />

    <!-- Hint -->
    <TextView
        android:id="@+id/tvPickHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зажми кнопку и води по экрану"
        android:textColor="@color/text_tertiary"
        android:textSize="11sp"
        android:gravity="center"
        android:layout_marginTop="4dp" />

    <!-- Pick Button -->
    <ImageButton
        android:id="@+id/btnPickColor"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:src="@drawable/crosshair_indicator"
        android:scaleType="centerInside"
        android:background="@drawable/bg_button_primary"
        android:layout_marginTop="12dp"
        android:contentDescription="Pick color" />

    <!-- Copy Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnCopyHex"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="HEX"
            android:textColor="@color/text_primary"
            android:textSize="11sp"
            android:background="@drawable/bg_button_secondary"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnCopyInt"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="INT"
            android:textColor="@color/text_primary"
            android:textSize="11sp"
            android:background="@drawable/bg_button_secondary"
            android:layout_marginHorizontal="4dp" />

        <Button
            android:id="@+id/btnCopyCoords"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="XY"
            android:textColor="@color/text_primary"
            android:textSize="11sp"
            android:background="@drawable/bg_button_secondary"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- History Container -->
    <LinearLayout
        android:id="@+id/historyContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

</LinearLayout>
